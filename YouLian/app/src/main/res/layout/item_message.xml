<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"
              tools:context=".activity.MainActivity">

    <com.huangjiazhong.youlian.view.CustomShapeImageView
        android:id="@+id/friend_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/login"
        app:borderColor="#ffffff"
        app:imageBorderWidth="2dp"
        app:onlyDrawBorder="false"
        app:shape="circle"
        app:roundRadius="3dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="nickname"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="body"
            android:textColor="#D4D0C8"
            android:textSize="17sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_message_status"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:background="@drawable/message_status"
        android:gravity="center"
        android:visibility="invisible"
        android:textSize="22sp"
        android:text="0"
        android:textColor="@android:color/white"/>

</LinearLayout>