<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huangjiazhong.youlian.activity.MainActivity">

    <LinearLayout
        android:id="@+id/main_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ff33b5e5">

            <ImageButton
                android:id="@+id/ibtn_drawer"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="#ff33b5e5"
                android:src="@mipmap/drawer"/>
            <EditText
                android:id="@+id/et_search_friend"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#ff33b5e5"
                android:paddingLeft="5dp"
                android:visibility="invisible"
                android:textColorHint="#FFFFA0"
                android:hint="输入好友账号"
                android:textSize="14sp"
                android:shadowColor="#3c3f41"
                android:singleLine="true"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/btn_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="添加好友"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:background="#ff33b5e5"
                />

            <ImageButton
                android:id="@+id/ibtn_share"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="#ff33b5e5"
                android:src="@mipmap/social_share"/>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ll_mainbottom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bottom_layout_line"
            android:orientation="horizontal">
        </LinearLayout>


    </LinearLayout>

    <!--  左面可以滑出来一个抽屉  android:layout_gravity="left" -->

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:focusable="false"
        android:clickable="false"
        android:onClick="jinzhi"
        android:background="@mipmap/drawer_head_background">

        <com.huangjiazhong.youlian.view.CustomShapeImageView
            android:id="@+id/my_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fitsSystemWindows="true"
            android:src="@mipmap/login"
            app:borderColor="#ffffff"
            app:imageBorderWidth="2dp"
            app:onlyDrawBorder="false"
            app:shape="circle"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/my_avatar"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:text="昵称"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nickname"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="账号"/>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/drawer_center_background"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_on"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@drawable/selector_draw_item"
                >
                <TextView
                    android:id="@+id/tv_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:text="在线"
                    android:textColor="#ffffff"
                    android:textSize="24sp"/>
                <ImageView
                    android:id="@+id/iv_on"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/friend_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_off"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@drawable/selector_draw_item"
                >
                <TextView
                    android:id="@+id/tv_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:text="隐身"
                    android:textColor="#ffffff"
                    android:textSize="24sp"/>
                <ImageView
                    android:id="@+id/iv_off"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:src="@mipmap/friend_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2b2b2b"/>

            <TextView
                android:id="@+id/tv_message_remind"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="消息提示"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:background="@drawable/selector_draw_item"
                />

            <TextView
                android:id="@+id/tv_chage_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="修改密码"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:background="@drawable/selector_draw_item"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2b2b2b"/>

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="关于友联"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:background="@drawable/selector_draw_item"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_switch_account"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#0ca0dc"
            android:text="退出当前账号"
            android:textColor="#ffffff"
            android:textSize="24sp"/>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>