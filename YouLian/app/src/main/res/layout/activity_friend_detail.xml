<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_friend_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huangjiazhong.youlian.activity.FriendDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/drawer_head_background">

        <com.huangjiazhong.youlian.view.CustomShapeImageView
            android:id="@+id/friend_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:fitsSystemWindows="true"
            android:src="@mipmap/login"
            app:borderColor="#ffffff"
            app:imageBorderWidth="2dp"
            app:onlyDrawBorder="false"
            app:shape="circle"/>
        <TextView
            android:id="@+id/change_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="改备注"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/drawer_center_background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/friend_avatar"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:text="昵称"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nickname"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="账号"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <Button
            android:id="@+id/btn_delete_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_red_light"
            android:textSize="22sp"
            android:text="删除好友"
            android:visibility="gone"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/btn_add_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#31ad49"
            android:textSize="22sp"
            android:text="添加好友"
            android:textColor="#ffffff"/>

    </RelativeLayout>
</LinearLayout>
