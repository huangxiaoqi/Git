<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huangjiazhong.youlian.activity.ChatActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff33b5e5">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#ff33b5e5"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="凤姐"
            android:textColor="#fff"
            android:textSize="24sp"/>
        <ImageView
            android:id="@+id/delete_friend"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:paddingRight="10dp"
            android:background="#ff33b5e5"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:src="@mipmap/deletefriend"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#afdcf4"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_emoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:src="@mipmap/emoji"
            />
        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="1dp"
            android:background="#f8f8f8"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_send"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#33b4e4"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:shadowRadius="1"
            android:text="发送"/>
    </LinearLayout>
    <GridView
        android:id="@+id/gv_face"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:numColumns="7"
        android:cacheColorHint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:horizontalSpacing="1px"
        android:verticalSpacing="1px"
        android:visibility="gone"
        >

    </GridView>

</LinearLayout>
